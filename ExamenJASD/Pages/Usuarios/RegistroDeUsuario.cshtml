@page
@model ExamenJASD.Pages.Usuarios.RegistroDeUsuarioModel
@{
    ViewData["Title"] = "Registro de Usuario"; 
}

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-secondary text-white text-center py-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body p-4">
            @await Html.PartialAsync("_Alerts")

            <form method="post" class="p-3">

                <div class="mb-3">
                    <label asp-for="Usuario.sNombre" class="form-label fs-5 fw-semibold"></label>
                    <input asp-for="Usuario.sNombre" type="text" class="form-control form-control-lg" placeholder="Ingrese Nombre" />
                    <span asp-validation-for="Usuario.sNombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Usuario.sUsuario" class="form-label fs-5 fw-semibold"></label>
                    <input asp-for="Usuario.sUsuario" type="text" class="form-control form-control-lg" placeholder="Ingrese Usuario" />
                    <span asp-validation-for="Usuario.sUsuario" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Usuario.sPassword" class="form-label fs-5 fw-semibold"></label>
                    <textarea asp-for="Usuario.sPassword" class="form-control form-control-lg" placeholder="Ingrese Password"></textarea>
                    <span asp-validation-for="Usuario.sPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Usuario.sEmail" class="form-label fs-5 fw-semibold"></label>
                    <textarea asp-for="Usuario.sEmail" class="form-control form-control-lg" placeholder="Ingrese Password"></textarea>
                    <span asp-validation-for="Usuario.sEmail" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Customers")" class="btn btn-outline-secondary px-4 py-2">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success px-4 py-2 ms-2">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>